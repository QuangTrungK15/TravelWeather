<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_vertical_spacing">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/showtransit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:background="@color/colorWhite">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/walking_transiticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic24_bus" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_toEndOf="@+id/walking_transiticon"
            android:layout_toRightOf="@+id/walking_transiticon"
            android:id="@+id/chevronlefticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic24_chevronleft" />

        <TextView
            android:layout_toEndOf="@+id/chevronlefticon"
            android:layout_toRightOf="@+id/chevronlefticon"
            android:id="@+id/blablaicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="......"
            android:textSize="18sp"/>
        <TextView
            android:layout_toEndOf="@+id/blablaicon"
            android:layout_toRightOf="@+id/blablaicon"
            android:id="@+id/tv_showtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="170m (3 phut)"
            android:textColor="@color/colorBlack"
            android:padding="4dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_toEndOf="@+id/tv_showtime"
            android:layout_toRightOf="@+id/tv_showtime"
            android:id="@+id/blablaicon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="......"
            android:textSize="18sp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_toEndOf="@+id/blablaicon2"
            android:layout_toRightOf="@+id/blablaicon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic24_chevronright" />

    </RelativeLayout>
</android.support.v7.widget.CardView>