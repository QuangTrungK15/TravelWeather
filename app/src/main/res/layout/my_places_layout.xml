<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_option_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/colorCyan"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="5dp"
            android:textAlignment="center"
            android:background="@drawable/circle_favourite_place"
            android:text="&#8942;"/>
        <ImageView
            android:id="@+id/img_my_place"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:foreground="@drawable/bg_favourite_place"/>

        <TextView
            android:id="@+id/my_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_my_place"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
